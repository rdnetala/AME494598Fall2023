#define LILYGO_WATCH_2019_WITH_TOUCH
#include <LilyGoWatch.h>

TTGOClass *ttgo;

void setup()
{
    Serial.begin(115200);
    ttgo = TTGOClass::getWatch();
    ttgo->begin();
    ttgo->openBL();

    ttgo->tft->fillScreen(TFT_WHITE);
    ttgo->tft->setTextColor(TFT_BLACK, TFT_WHITE);
    ttgo->tft->setTextFont(4);

    // Calculate text position for centering
    int textWidth = ttgo->tft->textWidth("Hello World");
    int textHeight = ttgo->tft->fontHeight();
    int centerX = (ttgo->tft->width() - textWidth) / 2;
    int centerY = (ttgo->tft->height() - textHeight) / 2;

    ttgo->tft->drawString("Hello World", centerX, centerY);
}

void loop()
{ 
}

